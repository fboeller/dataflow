{
  "name": "Get GitHub issues of a repo",
  "steps": [
    {
      "assignTo": "issues",
      "request": {
        "method": "GET",
        "url": "http://api.github.com/repos/fboeller/dataflow/issues",
        "body": null,
        "headers": null
      }
    },
    {
      "assignTo": "titles",
      "expression": {
        "$map": {
          "$eval": "issues.body"
        },
        "each(x)": {
          "$eval": "x.title"
        }
      }
    }
  ]
}