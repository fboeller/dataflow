{
  "name": "Get GitHub issues of a repo",
  "steps": [
    {
      "assignTo": "issues",
      "request": {
        "method": "GET",
        "url": "http://api.github.com/repos/fboeller/dataflow/issues",
        "body": null,
        "headers": null
      }
    },
    {
      "assignTo": "titles",
      "expression": {
        "$map": {
          "$eval": "issues.body"
        },
        "each(x)": {
          "$eval": "x.title"
        }
      }
    },
    {
      "assignTo": "issueResponse",
      "request": {
        "method": "GET",
        "url": "http://api.github.com/repos/fboeller/dataflow/issues",
        "body": null,
        "headers": null
      }
    },
    {
      "assignTo": "foobar",
      "for": {
        "const": "issue",
        "in": {
          "$eval": "issueResponse.body"
        },
        "do": [
          {
            "assignTo": "issues",
            "request": {
              "method": "GET",
              "url": "${issue.url}",
              "body": null,
              "headers": null
            }
          }
        ],
        "return": {
          "$eval": "issues"
        }
      }
    }
  ]
}
