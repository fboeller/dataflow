{
  "$schema": "https://raw.githubusercontent.com/fboeller/jift/master/workflow-schema.json",
  "name": "Get GitHub issues of a repo",
  "inputs": {
    "org": {
      "type": "string",
      "description": "An organization of a GitHub repository"
    },
    "repo": {
      "type": "string",
      "description": "A GitHub repository"
    }
  },
  "steps": [
    {
      "assignTo": "issueResponse",
      "request": {
        "method": "GET",
        "url": "https://api.github.com/repos/${org}/${repo}/issues",
        "body": null,
        "headers": null
      }
    },
    {
      "assignTo": "titles",
      "expression": {
        "$map": {
          "$eval": "issueResponse.body"
        },
        "each(x)": {
          "$eval": "x.title"
        }
      }
    },
    {
      "assignTo": "issues",
      "expression": {
        "$eval": "issueResponse.body"
      }
    },
    {
      "assignTo": "titles2",
      "for": {
        "const": "issue",
        "in": "issues",
        "do": [
          {
            "assignTo": "title",
            "expression": {
              "$eval": "issue.title"
            }
          }
        ],
        "return": "title"
      }
    }
  ]
}
